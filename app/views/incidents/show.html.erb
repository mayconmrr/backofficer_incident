<div class="panel panel-primary">
  <div class="panel-heading">Detalhes</div>
  <div class="panel-body">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>ID do Incidente</th>
          <th>Título do Problema</th>
          <th>Email do Usuário Afetado</th>
          <th>Nível de Prioridade</th>
          <th>Reportador Por</th>
          <th>Aberto Em</th>
          <th>Status do Incidente</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @incident.id %></td>
          <td><%= @incident.title %></td>
          <td><%= @incident.user_email %></td>
          <td><%= @incident.priority_level %></td>
          <td><%= @incident.backofficer.name %></td>
          <td><%= brazil_date(@incident.created_at)  %></td>
          <td><%= @incident.status %></td>
        </tr>
      </tbody>
    </table>

  <div class="col-md-6">

      <h4>Descrição do Problema</h4>
      <br />
      <%= @incident.problem_description %>
    </div>
    <div class="col-md-6">
      <h4>Tela de Evidência</h4>
      <br />
      <%=  image_tag @incident.evidence_screen.url(:medium) %>
    </div>
</div>
</div>

<hr>

<div class="text-center">
  <% if backofficer_signed_in? %>
    <%= link_to 'Editar dados do incidente', edit_incident_path(@incident), class: "btn btn-default" %>
  <% elsif analyst_signed_in? %>
    <% if @incident.status == 'open'%>
      <%= link_to 'Iniciar Análise', incident_analyse_path(@incident.id), method: :patch, class: "btn btn-danger" %>
      <%= "  |  " %>
      <%= link_to 'Resolver Incidente', edit_incident_path(@incident), class: "btn btn-success disabled", :disabled => true %>
    <% elsif @incident.status == 'analysing' && @incident.analyst_id == current_analyst.id %>
      <%= link_to 'Iniciar Análise', incident_analyse_path(@incident.id), method: :patch, class: "btn btn-danger disabled", :disabled => true %>
      <%= "  |  " %>
      <%= link_to 'Resolver Incidente', edit_incident_path(@incident), class: "btn btn-success" %>
    <% else %>
      <%= link_to 'Iniciar Análise', incident_analyse_path(@incident.id), method: :patch, class: "btn btn-danger disabled", :disabled => true %>
    <% end %>
    <% if @incident.status == 'closed' || @incident.status == 'solved' %>
      <%= "  |  " %>
      <%= link_to 'Resolver Incidente', edit_incident_path(@incident), class: "btn btn-success disabled", :disabled => true %>
    <% end %>
  <% end %>
</div>
<br />
<br />
<%= link_to 'Lista de Incidentes', incidents_path, class: "btn btn-primary" %>
