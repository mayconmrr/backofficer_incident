<div class="container">

  <div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">

      <div class="panel-heading">

        <div class="centered">
          <h3>Dados da Requisição</h3>
        </div>
      </div>


      <div class="panel-body">
        <%= form_for @incident, html: { multipart: true } do |f| %>

          <% if @incident.errors.any? %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
              <ul>
                <% @incident.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label I18n.t("activerecord.models.attributes.incident.title"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :title, autofocus: true, class:"form-control", placeholder: "Usuario com problema para ativar cobertura", :maxlength => "50" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label  I18n.t("activerecord.models.attributes.incident.priority_level"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.select :priority_level, Enumerations::PriorityLevel.to_a, { prompt: "Selecione o nível de criticidade da requisição." }, { class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label I18n.t("activerecord.models.attributes.incident.problem_description"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_area :problem_description, class:"form-control", placeholder:"Ex: O usúario x não consegue efetuar a opção y na tela z", :maxlength => "550" %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <%= f.label I18n.t("activerecord.models.attributes.incident.evidence_screen"), class:"col-md-3 control-label" %>
                <div class="col-md-9">
                  <%= f.file_field :evidence_screen, as: :file %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label I18n.t("activerecord.models.attributes.incident.plataform_kind"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.select :plataform_kind, Enumerations::IncidentPlataform.to_a, { prompt: "Selecione em qual plataforma ocorre o erro." }, { class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label I18n.t("activerecord.models.attributes.incident.user_name"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :user_name, class:"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label I18n.t("activerecord.models.attributes.incident.user_email"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :user_email, class:"form-control", placeholder:"Ex: customer@tksg.com" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label I18n.t("activerecord.models.attributes.incident.user_cpf"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :user_cpf, class:"form-control", placeholder:"Ex: 78066395353" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label I18n.t("activerecord.models.attributes.incident.contract_id"), class:"col-md-3 control-label" %>
            <div class="col-md-9">
              <%= f.text_field :contract_id, class:"form-control", placeholder:"Ex: 17908" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Salvar", class:"btn btn-info" do %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
